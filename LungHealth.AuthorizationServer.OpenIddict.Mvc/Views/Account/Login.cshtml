@model LungHealth.AuthorizationServer.OpenIddict.ViewModels.LoginViewModel;

<form autocomplete="off" asp-route="Login">
    <input type="hidden" asp-for="ReturnUrl"/>
    <div class="card">
        <input type="text" class="form-control form-control-lg" placeholder="Email Address" asp-for="EmailAddress" autofocus>
        <input type="password" class="form-control form-control-lg form-control-last" placeholder="Password" asp-for="Password">  
    </div>
        @if(Model?.ErrorMessage != null)
        {
             @Model.ErrorMessage
        }
    <p>
        <button type="submit" class="btn btn-dark btn-block mt-3">Login</button>
    </p>
</form>